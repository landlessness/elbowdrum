
<div id="calendar">
  <div id="month">
    <%= @day.strftime('%b') %>
  </div>
  <div id="day">
    <div id="weekday">
      <table>
        <tr>
          <td id="nav-yesterday">
            <%= link_to '&laquo;', account_day_path(@account, @day.yesterday.year, @day.yesterday.month, @day.yesterday.day) %>
          </td>
          <td id="nav-today">
            <span id="day_of_week"><%= @day.strftime '%a' %></span>            
          </td>
          <td id="nav-tomorrow">
            <%= link_to '&raquo;', account_day_path(@account, @day.tomorrow.year, @day.tomorrow.month, @day.tomorrow.day) %>            
          </td>
        </tr>
      </table>
    </div>
    <div id="day_number">
      <%= link_to_function @day.strftime('%e'), "new CalendarDateSelect( 'calendar_date_select', {before_close:function(param) { document.location = '/accounts/#{@account.id}/items/' + this.calendar_date_select.selected_date.getFullYear() + '/' + (this.calendar_date_select.selected_date.getMonth()+1) + '/' + this.calendar_date_select.selected_date.getDate(); }, year_range:10} );" %>
      <%= text_field_tag :calendar_date_select,  @day.strftime('%Y/%m/%d') %>
    </div>
  </div>
</div>
