<% @title = 'sign in' %>
<%= render :partial => 'marketing/title' %>
<h1>Sign In</h1>

<% form_tag session_path do -%>
<p><%= label_tag 'email' %><br />
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag 'Sign in' %> or <span class="underlined action"><%= link_to 'Sign up', signup_path %></span></p>
<% end -%>
